 @model Nimap_MachineTest1.Models.Product

<div class="container">
    <div class="row-cols-2">
        <div class="card">
            <div class="card-header">

                <h2 class="text-center text-primary">Add Category</h2>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="ProductName"></label>
                            <input asp-for="ProductName" type="text" class="form-control" placeholder="Enter Name" />
                            <span asp-validation-for="ProductName"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoryName"></label>
                            <select class="form-control" asp-for="CategoryName" value=""> <option value="">Select Category</option>
                            <option value="">Books</option>
                                <option value="">Fruits</option>
                                <option value="">Phone</option>
                                <option value="">Cars</option>
                                <option value="">Bikes</option>
                                <option value="">Company</option>
                                <option value="">Fans</option>
                                <option value="">Laptops</option>
                                <option value="">Televisons</option>
                                
                            </select>
                           
                            
                            <span asp-validation-for="CategoryName"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <select class="form-control" asp-for="CategoryId" value="">
                                <option value="">Select Category Id</option>
                                <option value="">1</option>
                                <option value="">2</option>
                                <option value="">3</option>
                                <option value="">4</option>
                                <option value="">5</option>
                                <option value="">6</option>
                                <option value="">7</option>
                                <option value="">8</option>
                                <option value="">9</option>

                            </select>


                            <span asp-validation-for="CategoryName"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-outline-success float-end" />

                        </div>

                    </form>

                </div>
            </div>


        </div>

    </div>

</div>


